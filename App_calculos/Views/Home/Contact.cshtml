@{
    ViewBag.Title = "Contact";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <title>Escalera</title>
    <link href="@Url.Content("~/Scripts/style_calculos.css")" rel="stylesheet" />
</head>
<body>
    <h2>Generar Escalera</h2>

    <div class="container">
        @using (Html.BeginForm("GenerateStaircase", "Home", FormMethod.Post))
        {
            <div class="form-group">
                <label for="size">Ingrese el tamaño de la escalera:</label>
                <input type="number" name="size" id="size" min="1" max="99" />
            </div>

            <div class="form-group">
                <label for="agentType">Tipo de agente:</label>
                <select name="agentType" id="agentType">
                    <option value="A">Agente A</option>
                    <option value="B">Agente B</option>
                    <option value="C">Agente C</option>
                </select>
            </div>

            <button type="submit">Generar Escalera</button>
        }

        @if (ViewBag.Staircase != null)
        {
            <pre>@Html.Raw(ViewBag.Staircase)</pre>
        }
    </div>
</body>
</html>
